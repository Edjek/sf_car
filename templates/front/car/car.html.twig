{% extends 'front/base.html.twig' %}

{% block title %}Car
{% endblock %}

{% block body %}

	<div class="container mt-3">

		<div>
			<a href="{{ path('main') }}" class="btn btn-outline-primary">
				Accueil
			</a>
			<a href="{{ path('car_list') }}" class="btn btn-outline-primary">
				Liste des voitures
			</a>
		</div>

		<div class="container border rounded w-50 p-5 mt-5">
			<h1>{{ car.name }}</h1>
			<p>{{ car.year }}</p>
			<p>{{ car.engine }}</p>
			<p>{{ car.description }}</p>
			<p>{{ car.brand.name }}</p>
			<p>{{ car.groupe.name }}</p>
		</div>
	</div>

{% endblock %}
