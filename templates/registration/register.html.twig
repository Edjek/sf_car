{% extends 'front/base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div class="container p-3 w-50 m-auto">

		<div class="form mt-5">
			{{ form_start(registrationForm) }}

			<div class="mb-3">
				{{ form_row(registrationForm.email, {'attr' : { 'class' : 'form-control'} }) }}
			</div>

			<div class="mb-3">
				{{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' ,'attr' : { 'class' : 'form-control' }}) }}
			</div>

			<div class="mb-3">
				{{ form_row(registrationForm.agreeTerms, { label: 'accepter les conditions'}) }}
			</div>

			<button type="submit" class="btn btn-outline-dark mt-3">Register</button>

			{{ form_end(registrationForm) }}

			{% if app.user %}
				<form action="{{ path('delete_user') }}">
					<button type="submit" class="btn btn-outline-danger mt-3">Supprimer</button>
				</form>
			{% endif %}
		</div>

	</div>
{% endblock %}
