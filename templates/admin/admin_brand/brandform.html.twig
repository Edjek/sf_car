{% extends 'admin/base.html.twig' %}

{% block title %}Brand
{% endblock %}

{% block body %}

	<div class="container">
		<div class="my-3">
			<a href="{{ path('admin_main') }}" class="btn btn-outline-primary">
				Accueil
			</a>
			<a href="{{ path('admin_brand_list') }}" class="btn btn-outline-primary">
				Retour Ã  la liste
			</a>
		</div>
	</div>

	<div class="container p-3 w-50">
	<h1>Categorie</h1>
		{{ form_start(brandForm) }}
		<div class="mb-3 mt-5">
			{{ form_label(brandForm.name, 'Nom : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
			{{ form_widget(brandForm.name, {'attr' : {'class' : 'form-control'} } ) }}
		</div>

		<div class="mb-3">
			{{ form_label(brandForm.country, 'Pays : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
			{{ form_widget(brandForm.country, {'attr' : { 'class' : 'form-control'} } ) }}
		</div>

		<div class="mt-5">
		{{ form_widget(brandForm.enregistrer, { 'attr' : {'class' : 'btn btn-outline-primary'} } ) }}
		</div>

		{{ form_end(brandForm) }}
	</div>

{% endblock %}
